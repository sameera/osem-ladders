# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# 1. Using environment variables from this file:
#    source .env.deploy
#    pnpm deploy:s3

# 2. Using command-line parameters:
#    pnpm deploy:s3 -- --bucket my-bucket --distribution E123ABC

# 3. Using AWS_PROFILE with environment variables:
#    source .env.deploy
#    AWS_PROFILE=production pnpm deploy:s3

# 4. Show help:
#    pnpm deploy:s3:help

